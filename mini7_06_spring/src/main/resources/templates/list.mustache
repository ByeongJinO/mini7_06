<div class="container mt-4">
    <ul class="list-group">
        {{#boardPage.content}}
            <li class="list-group-item">
                <h4 class="mb-2"><a href="/board/{{boardId}}">제목 : {{title}}</a></h4>
                <small class="text-muted">board ID: {{boardId}}</small>
            </li>
        {{/boardPage.content}}
        <a href="/board/new">Create News</a>
        <ul class="pagination justify-content-center">
            {{#hasPrev}}
                <a class="page-link" href="?page={{prev}}">Previous</a>
            {{/hasPrev}}
            {{#hasNext}}
                <a class="page-link" href="?page={{next}}">Next</a>
            {{/hasNext}}
        </ul>
    </ul>
</div>
